@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@section Styles{
    <link rel="stylesheet" href="~/css/home.css" />
}


<section class="hero-section">
    <div class="hero-section-content">
        <h2 class="tracking-in-expand"> THE <span class="focus-in-expand ">FUTURE'S</span> <br />SO BRIGHT, <br /> <span class="focus-in-expand ">YOU</span> GOTTA <br /> WHERE SHADES.</h2>
        <button class="vibrate-2">VIEW COLLECTIONS</button>
    </div>
    <div class="hero-section-image">
        <p class="image-caption">GUCCI <br /> GANG</p>
        <img src="images/versace.jpg" alt=" sunglasses" class="image" style="width:100%;" />
    </div>
</section>
<section class="featured-product-container">
    <p class="featured-product-sub-heading">Filter your world</p>
    <h2 class="featured-product-heading">Featured Products</h2>

    <div class="featured-products">
        <div class="product-card">
            <div class="product-card-image">
                <img src="images/prada1.jpeg" alt="prada1" />
            </div>
            <div class="product-card-details">
                <div class="product-card-title_price">
                    <div class="product-desc">
                        <h4 class="product-brand">prada</h4>
                        <p>Sunglasssssdfb hfhi udfkf</p>
                    </div>
                    <h4 class="product-price">£34</h4>
                </div>
                <button class="cart-button">
                    <span class="add-to-cart">
                        Add To Cart
                    </span>
                    <span class="added">
                        Added :)
                    </span>
                    <i class="fas fa-shopping-cart"></i>
                    <i class="fas fa-box"></i>
                </button>
            </div>
        </div>

    </div>
</section>

<section class="video_sales_promo-section">
    <div class="video">
        <video src="videos/My Video.mp4" id="myvideo"></video>
        <div class="video-timeline">
            <div class="progress-area">
                <div class="progress-bar"></div>
            </div>
        </div>

        <div class="controls">
            <div class="volume-mute">
                <i class="fa-solid fa-volume-high mute_unmute"></i>
                <input type="range" min="0" max="1" step="any" class="input-range" />
            </div>
            <div class="play-control">
                <i class="fa-solid fa-backward" id="backward"></i>
                <i class="fa-solid fa-play" id="play"></i>
                <i class="fa-solid fa-forward" id="forward"></i>
            </div>
            <div class="video-timer">
                <p class="current-time">00:00</p>
                <p class="separator">/</p>
                <p class="video-duration">00:00</p>
            </div>
        </div>
    </div>
    <div class="sales-promo">
        <p>hello world how u doing</p>
    </div>
</section>





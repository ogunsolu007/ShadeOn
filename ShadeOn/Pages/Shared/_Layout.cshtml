<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShadeOn </title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShadeOn.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/css2?family=Monoton&family=Poppins:wght@400;500;700&family=Zeyada&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/9cb4d82a7a.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container navbar-container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">ShadeOn</a>
                <button class="navbar-button">
                </button>
                <div class="nav-menu">
                    <ul class="nav-menu-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Store">Store</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>
                    <ul class="nav-menu-2">
                        <li class="nav-item">
                            <div class="nav-link nav-cart">
                                <i class="fa fa-shopping-cart"></i>
                                <span>1</span>
                            </div>
                        </li>
                        <partial name="_loginPartial" />
                        <li class="nav-item dropdown">
                            <a class="nav-link " asp-area="" asp-page="/form">
                                <i class="fa fa-user"></i>
                            </a>
                            <div class="dropdown-content">
                                <a href="#">User Login</a>
                                <a class="nav-link" asp-area="" asp-page="/admin/index">Admin</a>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-container">
            <div class="footer-logo">
                <a class="footer-navbar-brand" asp-area="" asp-page="/Index">ShadeOn</a>
            </div>
            <div class="footer-nav">
                <ul>
                    <li><a href="#">Shop</a></li>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">Careers</a></li>
                </ul>
            </div>
            <div class="footer-subscribe">
                <h3>Subscribe to our newsletter</h3>
                <form>
                    <input type="email" placeholder="Enter your email address">
                    <button type="submit">Subscribe</button>
                </form>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"> </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>